@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sessão";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 50px;
        }

        .login-container {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

            .login-container h2 {
                font-size: 24px;
                margin-bottom: 20px;
            }

        .form-floating {
            margin-bottom: 15px;
        }

        .form-label {
            font-weight: bold;
        }

        .form-control {
            padding: 8px;
            border-radius: 5px;
            border: 1px solid #ced4da;
        }

        .btn-primary {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .forgot-password-link,
        .register-link,
        .resend-confirmation-link {
            font-size: 14px;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="text-center login-container">
            
           
           
                <h2>Iniciar Sessão</h2>
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label">Palavra Passe</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label class="form-check-label">Lembrar-me</label>
                    </div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-primary">Iniciar Sessão</button>
                    <p class="forgot-password-link">
                        <a asp-page="./ForgotPassword">Esqueci minha palavra passe?</a>
                    </p>
                    <p class="register-link">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registo de novo usuário</a>
                    </p>
                    <p class="resend-confirmation-link">
                        <a asp-page="./ResendEmailConfirmation">Reenviar Email de Confirmação</a>
                    </p>
                </form>
           
        </div>
    </div>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function redirectToHome() {
            // Redirecionar para a página inicial após o login
            window.location.href = "/Home/Index";
        }
    </script>
}
